{
  "compilerOptions": {
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "lib": ["es2015"],
    "sourceMap": true,
    "outDir": "./dist",
    "typeRoots" : ["./node_modules/@types", "./src/@types", ".src/@types/coworkers/types"],
    "types": ["node", "bluebird", "amqplib"]
  },
  "include": [
    "./src/*.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/config/unused/",
    "src/lib/json-rpc/unused",
    "src/services/unused/",
    "src/**/unused"
  ]
}
