{
  "compilerOptions": {
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "strict": true,
    "target": "es6",
    "lib": ["es2015"],
    "sourceMap": true,
    "outDir": "./dist",
    "typeRoots" : ["./node_modules/@types", "./src/@types"],
    "types": ["node"]
  },
  "include": [
    "./src/*.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules/"
  ]
}
